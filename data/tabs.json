{
  "movie": {
    "filter": {
      "type": 1
    }
  },
  "tv": {
    "filter": {
      "type": 0
    }
  },
  "favourites": {
    "filter": {
      "user_state": 2
    }
  },
  "watched": {
    "filter": {
      "user_state": {
        "$gt": 0
      }
    }
  },
  "continue-watching": {
    "filter": {
      "user_state": 0
    },
    "sort_key": false
  },
  "animation": {
    "filter": {
      "genre_ids": {
        "$eq": 16,
        "$ne": 7424
      }
    }
  },
  "und": {
    "filter": {
      "user_state": null
    }
  },
  "kids": {
    "filter": {
      "$or": [
        {
          "genre_ids": {
            "$in": [10751, 10762]
          }
        },
        {
          "rated": {
            "$in": ["0"]
          }
        }
      ]
    }
  },
  "all-time-popular": {
    "filter": {
      "ratings.imdb.vote_count": {
        "$gt": 0
      }
    },
    "sort_key": "ratings.imdb.vote_count",
    "reverse": true
  },
  "popular": {
    "filter": {
      "popularity": {
        "$ne": null
      }
    },
    "sort_key": "popularity"
  },
  "classics": {
    "filter": {
      "ratings.imdb.vote_count": {
        "$gte": 100000
      },
      "ratings.imdb.vote_average": {
        "$gte": 8
      },
      "ratings.rt.vote_average": {
        "$gte": 0
      },
      "genre_ids": {
        "$nin": [16]
      },
      "type": 1,
      "release_date": {
        "$lte": 1000000000000
      }
    },
    "sort_key": "ratings.rt.vote_average",
    "reverse": true
  },
  "my list": {
    "filter": {
      "user_state": -1
    },
    "sort_key": false,
    "reverse": true
  },
  "new": {
    "sort_key": "details.date_added",
    "reverse": true
  },
  "watch-it-again": {
    "filter": {
      "user_state": {
        "$gt": 0
      }
    },
    "sort_key": false,
    "hide_unreleased": true
  },
  "soon": {
    "sort_key": "release_date",
    "only_unreleased": true,
    "reverse": true
  },
  "top-rated": {
    "filter": {
      "ratings.imdb.vote_count": {
        "$gte": 200
      }
    },
    "sort_key": "ratings.imdb.vote_average",
    "hide_unreleased": true,
    "reverse": true
  },
  "unfiltered": {
    "sort_key": false
  }
}
